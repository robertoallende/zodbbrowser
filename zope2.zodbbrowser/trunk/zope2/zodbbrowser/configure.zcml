<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:five="http://namespaces.zope.org/five">

  <five:registerPackage package="." initialize=".zope2.initialize" />

  <browser:page
    for="*"
    name="zodbbrowser"
    template="templates/main_template.zpt"
    permission="zope2.View"
  />

  <browser:viewletManager
      name="zodbbrowser.Leftbar"
      provides=".interfaces.ILeftbar"
      permission="zope2.View"
   />

   <browser:viewlet
      name="leftbar"
      for="*"
      manager=".interfaces.ILeftbar"
      template="templates/leftbar.zpt"
      class=".leftbar.LeftbarViewlet"
      permission="zope2.View"
     />


  <browser:resourceDirectory
    name="zodbbrowser"
    directory="resources"
   /> 

<!-- xmltree navigation -->
  <browser:page
      for="*"
      name="navigation_macros"
      permission="zope2.View"
      template="templates/navigation_macros.zpt"
      />

  <browser:pages
      for="zope.app.container.interfaces.IReadContainer"
      permission="zope2.View"
      class=".xmlobject.ReadContainerXmlObjectView">
    <browser:page
        name="children.xml"
        attribute="children"
        />
    <browser:page
        name="singleBranchTree.xml"
        attribute="singleBranchTree"
        />         
  </browser:pages>

  <browser:page
      name="singleBranchTree.xml"
      for="zope.interface.interface.Interface"
      permission="zope2.View"
      class=".xmlobject.XmlObjectView"
      attribute="singleBranchTree"
      />  

   <browser:page
    for="*"
    name="navigation"
    template="templates/navigation_macros.zpt"
    permission="zope2.View"
  />

</configure>
